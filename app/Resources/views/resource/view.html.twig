{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ resource.name }}</h3>
    <p>{{ resource.description }}</p>
    <h4>Version : </h4>
    {% for version in resource.version %}
        <b>{{ version.version }}</b> : {{ version.changelog }} <a href="{{ path('resources_download', {id: version.id}) }}" class="btn btn-success btn-sm">Télécharger</a> <a href="{{ path('resources_new_review', {id: version.id}) }}" class="btn btn-primary btn-sm">Faire une Review</a>
        <hr>
    {% endfor %}

{% endblock %}