{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-lg-12">
                <h4>Les derni√®res ressources</h4>
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom du Skript</th>
                        <th>Voir</th>
                        <th>Outils</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for skript in skripts %}
                        <tr>
                            <th>{{ skript.id }}</th>
                            <td>{{ skript.name }}</td>
                            {% if skript.approved == false %}
                                <td><a href="{{ path('resource_approved', {id: skript.id}) }}" class="btn btn-success btn-sm">Approuver</a></td>
                            {% else %}
                                <td><a href="{{ path('resources_view', {id: skript.id}) }}" class="btn btn-dark btn-sm">Voir</a></td>
                            {% endif %}
                            <td><a href="{{ path('resource_remove', {id: skript.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>&nbsp;&nbsp;<a href="{{ path('resource_edit', {id: skript.id}) }}" class="btn btn-primary btn-sm">Editer</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}