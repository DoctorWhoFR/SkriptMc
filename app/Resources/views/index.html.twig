{% extends 'base.html.twig' %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">SkriptMC</h1>
            <p class="lead text-muted">Liste des Ressources disponibles.</p>
            <p>
                <a href="{{ path('resources_index') }}" class="btn btn-primary">Parcourir toutes les ressources</a>
                <a href="{{ path('resources_new') }}" class="btn btn-secondary">Poster une ressources</a>
            </p>
        </div>
    </section>

    <div class="album text-muted">
        <div class="container">

            <div class="row">
                {% for ressource in ressources %}
                <div class="card">
                    <img data-src="holder.js/100px280/thumb" alt="Card image cap">
                    <strong>{{ ressource.name }}</strong>
                    <p class="card-text">{{ ressource.description }}</p>
                    <a href="{{ path('resources_view', {id: ressource.id}) }}" class="btn btn-primary">Voir la ressource</a>
                </div>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}